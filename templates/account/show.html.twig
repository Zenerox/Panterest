{% extends 'base.html.twig' %}

{% block title 'Profile' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">Profile</h1>
            <img src="{{ app.user.gravatar }}" alt="{{ app.user.fullname }}'s avatar" class="shadow, rounded-circle">
            <p class="lead">{{ app.user.email }}</p>
            <h2>{{ app.user.fullname }}</h2>
            <p><small>Account created on {{ app.user.createdAt|date('d/m/Y') }}</small></p>
            <p>
                <a href="{{ path('app_account_edit') }}"/>Edit account</a> | <a href="">Change password</a>
            </p>
        </div>
    </div>
{% endblock %}
